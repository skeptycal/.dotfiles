#!/usr/bin/env zsh
  # -*- coding: utf-8 -*-
  # shellcheck shell=bash
  # shellcheck source=/dev/null

# Reference: https://stackoverflow.com/a/3069686
shell "/bin/zsh"

# Disable the startup message
startup_message off

# Set a large scrollback buffer
defscrollback 32000

# Always start `screen` with UTF-8 enabled (`screen -U`)
default on
